<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<Scene xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <root>
      <AnchorPane prefHeight="600.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="418.0" prefWidth="451.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <MenuBar>
                     <menus>
                        <Menu mnemonicParsing="false" text="Game">
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#newGame" text="New Game" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem id="MenuQuit" mnemonicParsing="false" text="Quit" />
                           </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Connection">
                           <items>
                              <MenuItem id="MenuStartServer" mnemonicParsing="false" text="Start server" />
                              <MenuItem id="MenuConnect" mnemonicParsing="false" onAction="#menuConnect" text="Connect..." />
                              <MenuItem disable="true" mnemonicParsing="false" text="Disconnect" />
                           </items>
                        </Menu>
                     </menus>
                  </MenuBar>
                  <AnchorPane fx:id="main" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </root>
</Scene>
