<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="main" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.haumacher.wizard.ui.CurrentTrick">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="%ui.currentTrick">
         <VBox.margin>
            <Insets left="5.0" top="5.0" />
         </VBox.margin>
      </Text>
      <TilePane fx:id="table" hgap="5.0" minHeight="160.0" vgap="5.0">
         <VBox.margin>
            <Insets left="5.0" top="5.0" />
         </VBox.margin></TilePane>
      <VBox alignment="CENTER">
         <children>
            <Text fx:id="info" strokeType="OUTSIDE" strokeWidth="0.0" text="INFO_TEXT" textAlignment="CENTER">
               <VBox.margin>
                  <Insets left="5.0" top="5.0" />
               </VBox.margin>
            </Text>
            <Button fx:id="next" alignment="CENTER" defaultButton="true" mnemonicParsing="false" prefWidth="75.0" text="%ui.ok">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
